# Streamlit Secrets Configuration Template
# Copy this file to .streamlit/secrets.toml and fill in your actual credentials
# DO NOT commit the actual secrets.toml file to GitHub!

# ===============================================
# TELEGRAM BOT CONFIGURATION
# ===============================================
[telegram]
# Get bot token from @BotFather on Telegram
# Format: "123456789:ABCdefGHIjklMNOpqrsTUVwxyz"
bot_token = "YOUR_TELEGRAM_BOT_TOKEN_HERE"

# Get chat ID from @userinfobot on Telegram  
# Format: "123456789" (numbers only)
chat_id = "YOUR_TELEGRAM_CHAT_ID_HERE"

# ===============================================
# FUTURE API CONFIGURATIONS
# ===============================================

# Dhan API (for auto trading - future feature)
[dhan]
# Get from Dhan API dashboard
api_key = "YOUR_DHAN_API_KEY_HERE"
api_secret = "YOUR_DHAN_API_SECRET_HERE"
client_id = "YOUR_DHAN_CLIENT_ID_HERE"

# Zerodha API (alternative broker - future feature)
[zerodha]
api_key = "YOUR_ZERODHA_API_KEY_HERE"
api_secret = "YOUR_ZERODHA_API_SECRET_HERE"

# Angel One API (alternative broker - future feature)
[angel_one]
api_key = "YOUR_ANGEL_ONE_API_KEY_HERE"
client_code = "YOUR_ANGEL_ONE_CLIENT_CODE_HERE"
password = "YOUR_ANGEL_ONE_PASSWORD_HERE"
totp_secret = "YOUR_ANGEL_ONE_TOTP_SECRET_HERE"

# ===============================================
# DATABASE CONFIGURATION (future feature)
# ===============================================
[database]
# For storing trade history and analytics
connection_string = "YOUR_DATABASE_CONNECTION_STRING_HERE"

# ===============================================
# EXTERNAL SERVICES (future features)
# ===============================================

# Email notifications (alternative to Telegram)
[email]
smtp_server = "smtp.gmail.com"
smtp_port = "587"
email_address = "your_email@gmail.com"
email_password = "your_app_password_here"

# Discord webhook (alternative to Telegram)
[discord]
webhook_url = "YOUR_DISCORD_WEBHOOK_URL_HERE"

# Slack webhook (alternative to Telegram)
[slack]
webhook_url = "YOUR_SLACK_WEBHOOK_URL_HERE"

# ===============================================
# USAGE INSTRUCTIONS
# ===============================================

# 1. COPY THIS FILE:
#    cp .streamlit/secrets.toml.example .streamlit/secrets.toml

# 2. EDIT WITH YOUR CREDENTIALS:
#    Replace all "YOUR_*_HERE" values with actual credentials

# 3. VERIFY .GITIGNORE:
#    Ensure .streamlit/secrets.toml is in your .gitignore file

# 4. FOR STREAMLIT CLOUD:
#    Copy the [telegram] section to your Streamlit Cloud secrets dashboard

# 5. TELEGRAM SETUP:
#    - Message @BotFather to create bot and get token
#    - Message @userinfobot to get your chat ID
#    - Test connection using the app's sidebar

# ===============================================
# SECURITY NOTES
# ===============================================

# ⚠️  NEVER commit the actual secrets.toml file to GitHub
# ⚠️  Use different credentials for development vs production
# ⚠️  Regularly rotate your API keys and tokens
# ⚠️  Only share credentials through secure channels
# ⚠️  Monitor API usage for unusual activity